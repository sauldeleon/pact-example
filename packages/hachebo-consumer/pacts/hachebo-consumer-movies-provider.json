{
  "consumer": {
    "name": "hachebo-consumer"
  },
  "provider": {
    "name": "movies-provider"
  },
  "interactions": [
    {
      "description": "a GET request for a movie",
      "providerState": "a movie exists",
      "request": {
        "method": "GET",
        "path": "/movies/42",
        "headers": {
          "Accept": "application/json; charset=utf-8"
        },
        "matchingRules": {
          "$.headers.Accept": {
            "match": "regex",
            "regex": "application\\/json; *charset=utf-8"
          }
        }
      },
      "response": {
        "status": 200,
        "headers": {
          "Content-Type": "application/json; charset=utf-8"
        },
        "body": {
          "id": 42,
          "name": "The Silence of the Lambs",
          "genre": "Jonathan Demme",
          "director": "Terror",
          "year": 1991
        },
        "matchingRules": {
          "$.headers.Content-Type": {
            "match": "regex",
            "regex": "application\\/json; *charset=utf-8"
          },
          "$.body": {
            "match": "type"
          }
        }
      }
    },
    {
