{
  "name": "pact-example",
  "private": true,
  "devDependencies": {
    "lerna": "4.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lerna": "lerna",
    "bootstrap": "lerna bootstrap",
    "pact:hachebo": "yarn workspace hachebo-consumer test:pact:ci",
    "pact:hachebo:publish": "yarn workspace hachebo-consumer publish:pact",
    "pact:neflis": "yarn workspace neflis-consumer test:pact:ci",
    "pact:neflis:publish": "yarn workspace neflis-consumer publish:pact",
    "pact:tv-shows": "yarn workspace tv-shows-api test:pact",
    "pact:tv-shows:publish": "yarn workspace tv-shows-api publish:pact",
    "pact:publish": "run-s pact:hachebo:publish pact:neflis:publish pact:tv-shows:publish",
    "pact": "run-s pact:hachebo pact:neflis pact:tv-shows"
  }
}
